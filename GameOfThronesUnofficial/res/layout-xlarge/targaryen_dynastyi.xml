            android:text="Aegon V Targaryen"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bAerysII"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aerys II Targaryen"
            android:textSize="30sp" />
    </LinearLayout>

</ScrollView>