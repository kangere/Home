<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/adsdkContent7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" >
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:scaleType="fitXY"
            android:src="@drawable/targaryen_dynasty" />

        <Button
            android:id="@+id/bAenys"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aenys I Targaryen"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bJaehaerys"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jaehaerys I Targaryen"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bViserys"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Viserys I Targaryen"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bAegonII"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aegon II Targaryen"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bAegonIII"
            android:layout_width="match_parent"
